<html>
<body>
<form action ="greatest.php" method="post">
Enter the first number:
<input type="number" name="num1"/><br><br>
Enter the second number:
<input type="number" name="num2"/><br><br>
Enter the third number:
<input type="number" name="num3"/><br><br>
<input type="submit"name="submit"value="greatest">
</form>
<?php
if(isset( $_POST['submit']))
{
       $num1=$_POST['num1'];
       $num2=$_POST['num2'];
       $num3=$_POST['num3'];
    if($num1>$num2 && $num1>$num3)
     {
       echo"The greatest number is" $num1;
     }
else if(num2>num1 && num2>num3)
     {
        echo"The greatest number is" $num2;
     }
else
    {
      echo"The greatest number is" $num3;
    }
}
?>
</body>
</html>
